@model ShortenViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="/Home/Index" method="post">
        <div class="form-group">
            <label for="url">Insert URL here</label>
            <input asp-for="OriginalUrl" type="url" class="form-control" id="url" placeholder="https://example.com">
            @if (!string.IsNullOrWhiteSpace(Model.ShortenUrl))
            {
                <label>Short URL</label>
                <input asp-for="ShortenUrl" type="text" class="form-control" readonly />
            }
        </div>
        <button type="submit" class="btn btn-primary">Shorten!</button>
    </form>
</div>
